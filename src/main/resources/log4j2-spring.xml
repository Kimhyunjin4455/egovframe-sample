<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_ENV" value="${sys:SPRING_PROFILES_ACTIVE}"/>
        <Property name="LOG_PATH" value="D:/eGovTest/logs/${LOG_ENV}"/>
    </Properties>

    <!-- base Appender -->
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>


    <!-- base logger -->
    <Loggers>
        <Logger name="org.egovframe" level="DEBUG" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>
    </Loggers>

    <SpringProfile name="local">
        <Appenders>
            <Console name="ConsoleAppender" target="SYSTEM_OUT">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
            </Console>

            <RollingFile name="RollingFileAppenderLocal"
                         fileName="${LOG_PATH}/hjapp-local.log"
                         filePattern="${LOG_PATH}/archive/hjapp-local-%d{yyyy-MM-dd}-%i.log.gz"
                         append="true">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
                <Policies>
                    <SizeBasedTriggeringPolicy size="10MB"/>
                    <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                </Policies>
                <DefaultRolloverStrategy max="10"/>
            </RollingFile>
        </Appenders>
        <Loggers>
            <Root level="TRACE">
                <AppenderRef ref="ConsoleAppender"/>
                <AppenderRef ref="RollingFileAppenderLocal"/>
            </Root>
        </Loggers>
    </SpringProfile>

    <SpringProfile name="develop">
        <Appenders>
            <Console name="ConsoleAppender" target="SYSTEM_OUT">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
            </Console>

            <RollingFile name="RollingFileAppenderDevelop"
                         fileName="${LOG_PATH}/hjapp-develop.log"
                         filePattern="${LOG_PATH}/archive/hjapp-develop-%d{yyyy-MM-dd}-%i.log.gz"
                         append="true">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
                <Policies>
                    <SizeBasedTriggeringPolicy size="10MB"/>
                    <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                </Policies>
                <DefaultRolloverStrategy max="10"/>
            </RollingFile>
        </Appenders>

        <Loggers>
            <Root level="DEBUG">
                <AppenderRef ref="ConsoleAppender"/>
                <AppenderRef ref="RollingFileAppenderDevelop"/>
            </Root>
        </Loggers>
    </SpringProfile>

    <SpringProfile name="staging">
        <Appenders>
            <Console name="ConsoleAppender" target="SYSTEM_OUT">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
            </Console>

            <RollingFile name="RollingFileAppenderStaging"
                         fileName="${LOG_PATH}/hjapp-staging.log"
                         filePattern="${LOG_PATH}/archive/app-%d{yyyy-MM-dd}-%i.log.gz"
                         append="true">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
                <Policies>
                    <SizeBasedTriggeringPolicy size="10MB"/>
                    <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                </Policies>
                <DefaultRolloverStrategy max="10"/>
            </RollingFile>
        </Appenders>

        <Loggers>
            <Root level="WARN">
                <AppenderRef ref="ConsoleAppender"/>
                <AppenderRef ref="RollingFileAppenderStaging"/>
            </Root>
        </Loggers>
    </SpringProfile>

    <SpringProfile name="real">
        <Appenders>
            <Console name="ConsoleAppender" target="SYSTEM_OUT">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
            </Console>

            <RollingFile name="RollingFileAppenderReal"
                         fileName="${LOG_PATH}/hjapp-real.log"
                         filePattern="${LOG_PATH}/archive/app-%d{yyyy-MM-dd}-%i.log.gz"
                         append="true">
                <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
                <Policies>
                    <SizeBasedTriggeringPolicy size="10MB"/>
                    <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                </Policies>
                <DefaultRolloverStrategy max="10"/>
            </RollingFile>
        </Appenders>

        <Loggers>
            <Root level="ERROR">
                <AppenderRef ref="ConsoleAppender"/>
                <AppenderRef ref="RollingFileAppenderReal"/>
            </Root>
        </Loggers>
    </SpringProfile>


</Configuration>